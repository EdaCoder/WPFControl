                                                        Fill="Transparent"
                                                        Stretch="Fill"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                    <Button
                                        x:Name="Minimize"
                                        Width="30"
                                        Height="30"
                                        Margin="0,0,2,0"
                                        CommandParameter="2"
                                        Style="{StaticResource CaptionButtonStyle}"
                                        ToolTip="最小化"
                                        Visibility="{Binding MinimizeVisibility, RelativeSource={RelativeSource TemplatedParent}}">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Path
                                                        Width="30"
                                                        Height="30"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Data="M 7.2 14.2 L19.2 14.2"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                    <Button
                                        x:Name="Restore"
                                        Width="30"
                                        Height="30"
                                        CommandParameter="3"
                                        Style="{StaticResource CaptionButtonStyle}"
                                        ToolTip="恢复"
                                        Visibility="Collapsed">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Rectangle
                                                        Width="10"
                                                        Height="10"
                                                        Margin="0,3,3,0"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                    <Rectangle
                                                        Width="8"
                                                        Height="8"
                                                        Margin="5,0,0,5"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                    <Button
                                        x:Name="Maximize"
                                        Width="30"
                                        Height="30"
                                        Margin="0,0,1,0"
                                        CommandParameter="4"
                                        Style="{StaticResource CaptionButtonStyle}"
                                        ToolTip="最大化">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Rectangle
                                                        Width="10"
                                                        Height="10"
                                                        Margin="0,1,0,0"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                    <Button
                                        x:Name="Close"
                                        Width="30"
                                        Height="30"
                                        CommandParameter="5"
                                        Style="{StaticResource CaptionButtonStyle}"
                                        ToolTip="关闭">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <Grid Width="12" Height="12">
                                                    <Path
                                                        Data="M 12,12 L16.4,16.4"
                                                        Stretch="Fill"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                    <Path
                                                        Data="M 12,16.4 L 16.4,12 "
                                                        Stretch="Fill"
                                                        Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=eda:CandyWindow}}"
                                                        StrokeThickness="1" />
                                                </Grid>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                </StackPanel>
                            </Grid>
                            <AdornerDecorator Grid.Row="1" KeyboardNavigation.IsTabStop="False">
                                <ContentPresenter />
                            </AdornerDecorator>
                            <Popup
                                x:Name="SettingCanvas"
                                Width="150"
                                Height="200"
                                AllowsTransparency="True"
                                HorizontalOffset="-50"
                                IsOpen="False"
                                Placement="Bottom"
                                PlacementTarget="{Binding ElementName=Setting}"
                                StaysOpen="False">
                                <ScrollViewer Background="#40DADADA">
                                    <StackPanel>
                                        <StackPanel
                                            Margin="3,5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="White"
                                                Text="启用玻璃效果:" />
                                            <ToggleButton Content="1" />
                                        </StackPanel>
                                        <StackPanel
                                            Margin="3,5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="White"
                                                Text="玻璃效果:" />
                                            <eda:CandySlider
                                                Width="90"
                                                Margin="2,0"
                                                Value="{TemplateBinding BlurRadius}" />
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </Popup>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="Maximize" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Restore" Property="Visibility" Value="Visible" />
                            <Setter TargetName="LayoutRoot" Property="Margin" Value="7" />
                        </Trigger>
                        <Trigger Property="ResizeMode" Value="NoResize">
                            <Setter TargetName="Setting" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Minimize" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Maximize" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Restore" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>