    <Style TargetType="eda:CandyFlowScroll">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="Local" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="eda:CandyFlowScroll">
                    <DockPanel Background="{TemplateBinding Background}" LastChildFill="True">
                        <Grid
                            x:Name="PART_ToolBarHost"
                            Margin="0,6"
                            Panel.ZIndex="1"
                            DockPanel.Dock="Bottom">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                x:Name="PART_FindToolBarHost"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Visibility="Collapsed" />
                            <StackPanel
                                Grid.Column="1"
                                Margin="{TemplateBinding InnerMargin}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" Visibility="{TemplateBinding Fonts}">
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Margin="1,0"
                                        Padding="4"
                                        Background="{TemplateBinding Background}"
                                        Command="NavigationCommands.DecreaseZoom"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsEnabled="{TemplateBinding CanDecreaseZoom}"
                                        Template="{DynamicResource Sub}" />
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Margin="1,0"
                                        Padding="4"
                                        Background="{TemplateBinding Background}"
                                        Command="NavigationCommands.IncreaseZoom"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsEnabled="{TemplateBinding CanDecreaseZoom}"
                                        Template="{DynamicResource Add}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{TemplateBinding PerNext}">
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Margin="1,0"
                                        Padding="4"
                                        Background="{TemplateBinding Background}"
                                        Command="{TemplateBinding Command}"
                                        CommandParameter="-1"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsEnabled="{TemplateBinding CanDecreaseZoom}"
                                        Template="{DynamicResource Left}" />
                                    <Button
                                        Width="20"
                                        Height="20"
                                        Margin="1,0"
                                        Padding="4"
                                        Background="{TemplateBinding Background}"
                                        Command="{TemplateBinding Command}"
                                        CommandParameter="1"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsEnabled="{TemplateBinding CanDecreaseZoom}"
                                        Template="{DynamicResource Right}" />
                                </StackPanel>
                                <Button
                                    Width="20"
                                    Height="20"
                                    Margin="1,0"
                                    Padding="4"
                                    Background="{TemplateBinding Background}"
                                    Command="{TemplateBinding Command}"
                                    CommandParameter="0"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsEnabled="{TemplateBinding CanDecreaseZoom}"
                                    Template="{DynamicResource Back}"
                                    Visibility="{TemplateBinding Back}" />
                            </StackPanel>
                        </Grid>
                        <Border
                            Margin="{TemplateBinding Padding}"
                            Panel.ZIndex="0"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                CanContentScroll="True" />
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>