<Window
    x:Class="WPFControl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eda="http://edacoder.github.io"
    xmlns:local="clr-namespace:WPFControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <eda:EdaCoderImage
            x:Name="edaCoderImage"
            Width="240"
            Height="300"
            BorderBrush="Black"
            BorderThickness="1"
            Fill="WhiteSmoke"
            ImageThickness="240,300"
            IsAsyncLoad="True"
            PopupThickness="400,200"
            Src="https://fc.sinaimg.cn/mw1024/006yt1Omgy1hfwrvzvdztj30nh0xcqbh.jpg">
            <eda:EdaCoderImage.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    ShadowDepth="0"
                    Color="Red" />
            </eda:EdaCoderImage.Effect>
            <eda:EdaCoderImage.PopTemplate>
                <DataTemplate>
                    <TextBlock Text="1231231231232" />
                </DataTemplate>
            </eda:EdaCoderImage.PopTemplate>
            <eda:EdaCoderImage.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock
                            Margin="0,3"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Text="名称：测试" />
                        <TextBlock
                            Margin="0,3"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Text="时间：2023年" />
                    </StackPanel>
                </DataTemplate>
            </eda:EdaCoderImage.ItemTemplate>
        </eda:EdaCoderImage>
    </Grid>
</Window>
