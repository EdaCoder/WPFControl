<UserControl
    x:Class="WPFControl.ControlDemo.CandyContainerDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eda="http://edacoder.github.io"
    xmlns:local="clr-namespace:WPFControl.ControlDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CandyContainerDemoVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:CandyContainerDemoVM />
    </UserControl.DataContext>
    <Grid>
        <eda:CandyContainer
            Width="400"
            Height="200"
            Background="#50FF74B1"
            TagSource="{Binding Data}" />
    </Grid>
</UserControl>
