<UserControl
    x:Class="WPFControl.ControlDemo.CandyWaterButtonDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eda="http://edacoder.github.io"
    xmlns:local="clr-namespace:WPFControl.ControlDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <eda:CandyWaterButton
            Click="CandyWaterButton_Click"
            Command="{Binding ClickCommand}"
            ItemSource="{Binding Data}" />
    </Grid>
</UserControl>
